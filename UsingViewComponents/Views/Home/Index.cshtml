@model IEnumerable<Product>
@{ 
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach(Product p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Create" asp-controller="Home">Create</a>


